<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <h1>User Profile</h1>
    <hr />
    <h2>My Orders</h2>
    {{#each orders}}
      <div class="card mb-3">
        <div class="card-body">
          <ul class="list-group">
            {{#each this.items}}
              <li class="list-group-item">
                <span
                  class="badge float-end"
                  style="color:white; background:black; border-radius:10px"
                >{{this.price}}</span>
                {{this.item.title}}
                |
                {{this.qty}}
                Units
              </li>
            {{/each}}
          </ul>
        </div>
        <div class="card-footer">
          <strong>Total Price: ${{this.cart.totalPrice}}</strong>
        </div>
      </div>
    {{/each}}
  </div>
</div>