{{#if this.products}}
  <div class="row d-flex justify-content-center mt-3">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
      <ul class="list-group">
        {{#each products}}
          <li class="list-group-item">
            <span style="font-weight: bold">{{this.item.title}}</span>
            <span class="badge bg-success">${{this.price}}</span>
            <div class="btn-group">
              <button
                type="button"
                class="btn btn-primary btn-sm dropdown-toggle"
                data-bs-toggle="dropdown"
                aria-haspopup="true"
                aria-expanded="false"
                style="background:rgb(5, 5, 141); border-radius: 5px;"
              >
                Action
                <span class="caret"></span>
              </button>
              <ul class="dropdown-menu">
                <li><a
                    class="dropdown-item"
                    href="/reduce/{{this.item._id}}"
                  >Reduce by 1</a></li>
                <li><a
                    class="dropdown-item"
                    href="/remove/{{this.item._id}}"
                  >Remove All</a></li>
              </ul>
            </div>
            <span
              class="badge float-end"
              style="color:white; background:black; border-radius:10px"
            >{{this.qty}}</span>
          </li>
        {{/each}}
      </ul>
    </div>
  </div>
  <div class="row">
    <div
      class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3"
      style="margin-left:340px; margin-top:10px"
    >
      <strong>Total: ${{totalPrice}}</strong>
    </div>
  </div>
  <hr style="width: 100%;" />
  <div class="row">
    <div
      class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3"
      style="margin-left:340px; margin-top:10px"
    >
      <a href="/checkout" type="button" class="btn btn-success">Checkout</a>
    </div>
  </div>
{{else}}
  <div class="row d-flex justify-content-center">
    <div
      class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3"
      style="margin-top:10px"
    >
      <h2>No Items in Cart yet!</h2>
    </div>
  </div>
{{/if}}